// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/* ---------- Enums ---------- */

enum AmountUnit {
  g
  oz
  ml
  floz
  cup
}

enum NormalizationMethod {
  exact
  density_assumed_1g_per_ml
}

enum DensityRating {
  green
  yellow
  red
}

enum EntryMethod {
  delta
  total
}

/* ---------- Models ---------- */

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  image         String?
  emailVerified DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  // Your app relations
  preferences   UserPreferences?
  stepLogs      StepLog[]
  waterLogs     WaterLog[]
  foodLogs      FoodLog[]
  savedFoods    SavedFood[]
  dailySummaries DailySummary[]
}

model UserPreferences {
  id            String   @id @default(cuid())
  userId        String   @unique

  // Goals
  stepsGoal     Int      @default(8000)
  waterCupsGoal Int      @default(8)
  caloriesGoal  Int      @default(2000)

  // Day grouping & UX defaults
  timeZone         String     @default("America/New_York")
  defaultFoodUnit  AmountUnit @default(g)
  defaultLiquidUnit AmountUnit @default(ml)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model StepLog {
  id         String   @id @default(cuid())
  userId     String

  // When it happened, and what "day bucket" it belongs to
  occurredAt DateTime
  day        DateTime

  stepsDelta  Int
  entryMethod EntryMethod @default(delta)

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, occurredAt])
  @@index([userId, day])
}

model WaterLog {
  id         String   @id @default(cuid())
  userId     String

  occurredAt DateTime
  day        DateTime

  // Use Float to support 0.5 cups, etc.
  cupsDelta   Float
  entryMethod EntryMethod @default(delta)

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, occurredAt])
  @@index([userId, day])
}

model FoodLog {
  id         String   @id @default(cuid())
  userId     String

  occurredAt DateTime
  day        DateTime

  calories Int
  isLiquid Boolean
  label    String? // what the user calls it (for recall)

  // User-entered amount (for recall)
  amountValue Float?
  amountUnit  AmountUnit?

  // Normalized for computation
  gramsNormalized     Float?
  mlNormalized        Float?
  normalizationMethod NormalizationMethod?

  // Computed quality
  densityCalPerGram Float?
  densityRating     DensityRating?

  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Soft delete for audit/undo potential
  deletedAt DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  savedFoodId String?
  savedFood   SavedFood? @relation(fields: [savedFoodId], references: [id], onDelete: SetNull)

  @@index([userId, occurredAt])
  @@index([userId, day])
  @@index([userId, label])
  @@index([userId, savedFoodId])
}

model SavedFood {
  id     String @id @default(cuid())
  userId String

  name     String
  isLiquid Boolean

  // Optional “default” amounts and calories
  defaultCalories    Int?
  defaultAmountValue Float?
  defaultAmountUnit  AmountUnit?

  // Optional density defaults if you want them later (not required now)
  defaultGramsNormalized      Float?
  defaultMlNormalized         Float?
  defaultNormalizationMethod  NormalizationMethod?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs FoodLog[]

  @@unique([userId, name])
  @@index([userId])
}

model DailySummary {
  id     String   @id @default(cuid())
  userId String
  day    DateTime

  caloriesTotal   Int    @default(0)
  stepsTotal      Int    @default(0)
  waterCupsTotal  Float  @default(0)

  caloriesPct Float @default(0)
  stepsPct    Float @default(0)
  waterPct    Float @default(0)
  overallPct  Float @default(0)

  // For simplified past-days color (mass-weighted rating)
  densityScore  Float?
  densityRating DensityRating?

  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, day])
  @@index([userId, day])
}
