generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

/* ---------- Enums ---------- */

enum AmountUnit {
  g
  oz
  ml
  floz
  cup
}

enum NormalizationMethod {
  exact
  density_assumed_1g_per_ml
}

enum DensityRating {
  green
  yellow
  red
}

/* ---------- Models ---------- */

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  preferences UserPreferences?
  stepLogs    StepLog[]
  waterLogs   WaterLog[]
  foodLogs    FoodLog[]
  savedFoods  SavedFood[]
}

model UserPreferences {
  id            String   @id @default(cuid())
  userId        String   @unique
  stepsGoal     Int      @default(8000)
  waterCupsGoal Int      @default(8)
  caloriesGoal  Int      @default(2000)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model StepLog {
  id         String   @id @default(cuid())
  userId     String
  occurredAt DateTime
  stepsDelta Int
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, occurredAt])
}

model WaterLog {
  id         String   @id @default(cuid())
  userId     String
  occurredAt DateTime
  cupsDelta  Int
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, occurredAt])
}

model FoodLog {
  id         String   @id @default(cuid())
  userId     String
  occurredAt DateTime

  calories Int
  isLiquid Boolean
  label String?  // what the user calls it (for recall)

  // User-entered amount (for recall)
  amountValue Float?
  amountUnit  AmountUnit?

  // Normalized for computation
  gramsNormalized     Float?
  mlNormalized        Float?
  normalizationMethod NormalizationMethod?

  // Computed quality
  densityCalPerGram Float?
  densityRating     DensityRating?

  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  savedFoodId String?
  savedFood   SavedFood? @relation(fields: [savedFoodId], references: [id], onDelete: SetNull)

  @@index([userId, occurredAt])
  @@index([userId, label])
  @@index([userId, savedFoodId])
}

model SavedFood {
  id     String @id @default(cuid())
  userId String

  name     String
  isLiquid Boolean

  // Optional “default” amounts and calories
  defaultCalories   Int?
  defaultAmountValue Float?
  defaultAmountUnit  AmountUnit?

  // Optional density defaults if you want them later (not required now)
  defaultGramsNormalized Float?
  defaultMlNormalized    Float?
  defaultNormalizationMethod NormalizationMethod?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs FoodLog[]

  @@unique([userId, name])
  @@index([userId])
}
